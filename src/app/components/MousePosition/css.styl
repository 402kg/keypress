.container
	display flex
	flex-direction column
	padding 10px
	border-left 1px solid #DDD
	width 300px
	align-items center
	justify-content center
	flex-shrink 0

.content
	display flex
	align-items flex-start
	flex-direction column
	width 140px

.title
	font-size 12px
	text-transform uppercase
	margin-bottom 10px
	color #888

.value
	font-size 22px

	&:not(:last-child)
		margin-bottom 5px
